{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:node": "node --env-file .env  --experimental-strip-types --no-warnings --watch src/server.ts",
    "dev:node:dev": "node --env-file .env.development --experimental-strip-types --no-warnings --watch src/server.ts",
    "dev": "ts-node --project tsconfig.json --require tsconfig-paths/register src/server.ts",
    "start": "node --env-file .env --experimental-strip-types --no-warnings  src/server.ts",
    "services:up": "docker compose --env-file .env -f infra/compose.yaml up -d",
    "services:stop": "docker compose --env-file .env -f infra/compose.yaml stop",
    "services:down": "docker compose --env-file .env -f infra/compose.yaml down",
    "migrations:create": "dotenv -e .env  npx drizzle-kit generate",
    "migrations:up": "dotenv -e .env npx drizzle-kit migrate",
    "services:db:studio": "dotenv -e .env npx drizzle-kit studio",
    "services:db:seed": "node --env-file .env --experimental-strip-types --no-warnings infra/database/seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@types/node": "24.0.8",
    "drizzle-kit": "0.31.4",
    "drizzle-seed": "0.3.1",
    "typescript": "5.8.3",
    "ultracite": "5.0.27",
    "dotenv": "^17.1.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.1",
    "postgres": "^3.4.7",
    "zod": "3.25.67"
  }
}
