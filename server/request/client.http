# Variables
@baseUrl = http://localhost:3333

# GET Health check (Status)
# @name getStatus
GET {{baseUrl}}/status

###

# GET rooms
# @name getRoom
GET {{baseUrl}}/rooms

###

# POST rooms
# @name createRoom
POST {{baseUrl}}/rooms
Content-Type: application/json

{
  "name": "Sala create teste http-client",
  "description": "Essa é uma sala de teste no http-client"
}

###

@roomId = {{getRoom.response.body.$.[0].id}}
@createRoomId = {{createRoom.response.body.$.roomId}}
###

# GET rooms
# @name getRoomQuestions
GET {{baseUrl}}/rooms/{{roomId}}/questions

###

# POST rooms
# @name createRoomQuestion
POST {{baseUrl}}/rooms/{{createRoomId}}/questions
Content-Type: application/json

{
  "question": "Essa é uma questão de teste criada no http-client"
}


